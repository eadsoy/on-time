
<div class="container">
  <div class="row">
    <div id="map" 
        class="col-6"
        style="width: 50%; height: 500px;"
        data-markers=""
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    <div class="col-6">
      <div id="directions" class="directions"></div>

      <button type="button" id='btn-submit' class='btn btn-danger d-inline'>Create Route</button>
      <%= form_with url: "/tracks", method: :post do |form| %>
        <%= form.label :query, "Search for:" %>
        <%= form.submit "Find songs" %>
      <% end %>
      <%= link_to 'Sign in with Spotify', user_spotify_omniauth_authorize_path, class: 'btn btn-dark' %>
    </div>
  </div>
</div>

<div class="container">
  <div>
